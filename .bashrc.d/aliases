# .bashrc

if [[ "$OSTYPE" =~ "darwin" ]]; then
  LS_CMD='gls'
else
  LS_CMD='ls'
fi

alias ll="$LS_CMD -l --human-readable --group-directories-first --time-style=long-iso"
alias lld='ll -d */'
alias df='duf'
alias dmesg='sudo dmesg -xT'
alias open='xdg-open'

alias cd-temp='cd ~/temp'

alias git-scracth='git status && git branch -D scratch; git checkout -b scratch'
