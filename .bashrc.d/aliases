# .bashrc

if [[ "$OSTYPE" =~ "darwin" ]]; then
  LS_CMD='gls'
  alias find='gfind'
else
  LS_CMD='ls'
fi

LS_OPTS=(
  "-l"
  "--color=always"
  "--human-readable"
  "--group-directories-first"
  "--time-style=long-iso"
)

alias ll="$LS_CMD ${LS_OPTS[*]}"
alias lld='ll -d */'
alias df='duf'
alias dmesg='sudo dmesg -xT'
alias open='xdg-open'

alias cd-temp='cd ~/temp'

alias git-scratch='git status && git branch -D scratch; git checkout -b scratch'
