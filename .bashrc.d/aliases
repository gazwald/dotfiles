# .bashrc

if [ "$OSTYPE" == "linux-gnu" ]; then
  alias ll='ls -l --human-readable --group-directories-first --time-style=long-iso'
else
  alias ll='gls -l --human-readable --group-directories-first --time-style=long-iso'
fi

alias lld='ll -d */'
alias df='duf'
alias dmesg='sudo dmesg -xT'
alias open='xdg-open'

alias cd-temp='cd ~/temp'

alias git-scracth='git status && git branch -D scratch; git checkout -b scratch'
